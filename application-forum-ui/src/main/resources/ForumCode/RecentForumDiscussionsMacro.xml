    <property>
      <code>{{include reference="ForumCode.Variables" /}}

{{velocity}}
#set ($discard = $xwiki.ssx.use('ForumCode.RecentForumDiscussionsMacro'))
#set ($limit = $xcontext.macro.params.limit)
#if (!$limit)
  #set ($limit = 5)
#end
## get from all the forums most recent N topics and topics' answers
#set ($query = ", BaseObject as topicOrAnswer where doc.fullName=topicOrAnswer.name and topicOrAnswer.className in ('ForumCode.TopicClass', 'ForumCode.AnswerClass') and doc.space &lt;&gt; 'ForumCode' order by doc.date desc")
#set ($results = $services.query.hql($query).setLimit($limit).execute())
(% class='recentForumDiscussions' %)
#foreach ($result in $results)
  ## @action param is used at the end to build the translation key, which reflects the action performed by an user
  ## since answers don't have a title, the label for their URL is the title of the parent topic
  #set ($document = $xwiki.getDocument($result))
  #if ($document.getObject('ForumCode.TopicClass'))
    ## Topics
    #set ($topicTitle = $document.title)
    #if ($document.version == '1.1')
      #set ($action = 'createdTopic')
    #else
      #set ($action = 'editedTopic')
    #end
  #else
    ## Answers
    #set ($topic = $document.documentReference.parent)
    #set ($topicTitle = $xwiki.getDocument($topic).title)
    #if ($document.version == '1.1')
      #set ($action = 'createdAnswerOnTopic')
    #else
      #set ($action = 'editedAnswerOnTopic')
    #end
  #end
  * $services.icon.render('comment') [[$xwiki.getUserName($document.author, false)&gt;&gt;$document.author]] $services.localization.render("recent.forum.discussions.${action}") [[$topicTitle&gt;&gt;$document]] $services.localization.render('recent.forum.discussions.creationDate', [$xwiki.formatDate($document.date)])
#end

#if ($results.size() &gt; 0)
  [[$services.localization.render('recent.forum.discussions.seeAllDiscussions')&gt;&gt;Forums.WebHome]]
#else
  [[$services.localization.render('recent.forum.discussions.addDiscussion')&gt;&gt;Forums.WebHome]]
#end

{{/velocity}}</code>
